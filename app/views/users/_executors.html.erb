<div class="all_executor_feed">
	<h1>Исполнители</h1>
		<ul>
			<% @users.each do |user| %>
			<li>
				<div class="all_executor_name_avatar">
				<div class="all_executor_avatar">
				<%= avatar_for user, :size => "120x120" %>
				<div class="all_executor_review">
					<% if user.reviewss.present? %>
					Отзывы:
					<% if user.reviewss.where(negative: 0).present? %>
					 <i class="fa fa-thumbs-o-up"></i>
        <%= user.reviewss.where(negative: 0).count %>
					<% end %>
					<% if user.reviewss.where(negative: 1).present? %>
					<i class="fa fa-thumbs-o-down"></i>
        <%= user.reviewss.where(negative: 1).count %>
					<% end %>
					<% else %>
					Нет отзывов
					<% end %>
				</div>
				</div>
			
				<div class="all_executor_name">
					<h2><%= link_to user.name, user %></h2>
					<div class="all_executor_rating">
					<%= average_rating_for(user, ['Качество', 'Вежливость', 'Цена']) %>
					</div>
					
				</div>
				 
				
				<div class="executor_hourprice">
					<h3><%= user.hourprice %> тг./час</h3>
					
					</div>
					<div class="all_executor_about">
						<%= truncate user.about, length: 90 %>
					</div>
					</div>
					<% end %>
					
		</li>
	</ul>
	</div>