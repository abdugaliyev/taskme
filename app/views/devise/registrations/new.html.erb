<div class="register-form">
  <div class="register">
<h2>Зарегистрироваться</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.text_field :name, :autofocus => true, placeholder: "Имя", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, placeholder: "E-mail", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.collection_select :city_id, City.all, :id, :name %>
  </div>
   <div class="user-register">
      <div class="user-register-name" >
        <%= f.label :birthday, "День рождения" %>
      </div>
      <div class="user-register-select">
        <%= f.date_select :birthday, {:order => [:day, :month, :year], :start_year => 1940, :end_year => 1995}, { :class => "form-control" } %>
      </div>
    </div>
  <div class="form-group clear">
    <%= f.password_field :password, placeholder: "Пароль",class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Повторите пароль", class: "form-control" %>
  </div>
  <div class=>
  <%= f.submit "Зарегистрироваться", class: "btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  </div>
</div>